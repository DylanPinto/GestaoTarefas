@model GestaoTarefas2.Models.Tarefa

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Tarefa</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeTarefa" class="control-label">Nome da Tarefa</label>
                <input asp-for="NomeTarefa" class="form-control" />
                <span asp-validation-for="NomeTarefa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeOrdena" class="control-label"></label>
                <select asp-for="NomeOrdena" class="form-control" ></select>
                
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label">Destinatario</label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label">Data de Início</label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label">Data de Finalização</label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoId" class="control-label">Tipo de tarefa</label>
                <select asp-for="TipoId" class="form-control" asp-items="ViewBag.TipoId"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estadoTarefa" class="control-label">Estado</label>
                <input asp-for="estadoTarefa" class="form-control" value="Incompleta"/>
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
